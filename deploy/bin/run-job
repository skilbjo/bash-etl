#!/usr/bin/env bash
set -eou pipefail

dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )/../../" && pwd )" && cd "$dir"
app="$(basename $(pwd))"
src_dir="${dir}/src"
tmp_dir='/tmp'
_job="$1"
set +u; _date="$2"; set -u
cmd=''

prereqs(){
  if [[ $(whoami) == 'root' ]]; then
    case "$(uname -m)" in
      arm* )
        deploy_dir='/usr/local/deploy/bin'
        set +e; eval "${deploy_dir}/apk-arm"; update-ca-certificates; apk fix || echo 'Unable to reach apk...'; set -e; # set +e when apk not available
    esac
fi
}

case "$_job" in
  datalake-etl )
    if [[ -z $_date ]]; then _date="$(date +%F)"; fi
    cmd="${src_dir}/datalake-etl/run-it" ;;
  vacuum )
    cmd="${src_dir}/vacuum/run-it weekly" ;;
  * )
    echo 'No args provided' && exit 1 ;;
esac

prereqs && \
  eval "$cmd"
